extends ./layouts/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold") Ubicacion en el mapa 

        div(class="flex flex-col md:flex-row items-center py-10 gap-4 ")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar propiedades: 

            div(class="w-full md:w-auto flex items-center gap-2")
                label(class="text-sm uppercase w-24 text-gray-500 font-bold" for="categorias") Categorias 
                select(name="categoria" id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow") 
                    option(value="") -Seleccione-  
                    each categoria in categorias
                        option(value=categoria.id)= categoria.nombre

            div(class="w-full md:w-auto flex items-center gap-2")
                label(class="text-sm uppercase w-24 text-gray-500 font-bold" for="precios") Precios 
                select(name="precio" id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow") 
                    option(value="") -Seleccione-  
                    each precio in precios
                        option(value=precio.id)= precio.nombre

        div(id="mapa-inicio" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in casas 
                    include ./templates/card


        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Apartamentos en venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in apartamentos 
                    include ./templates/card


block scripts 
    //- librerias para mostrar el mapa
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js") 
    
